USER_NAME=your_name
CLAUDE_AGENT_SDK_SKIP_VERSION_CHECK=true

# Database Configuration
# Default: SQLite (file: ./claudeworld.db, no installation needed)
# For PostgreSQL: Uncomment and configure the line below
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/claudeworld

# Claude API Configuration
# Option 1: Use direct API key authentication (recommended for deployment)
# Get your API key from: https://console.anthropic.com/settings/keys
# CLAUDE_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
#
# Option 2: Use Claude Code web authentication (when running through Claude Code with subscription)
# If CLAUDE_API_KEY is not set, the backend will use Claude Code authentication
# Note: For production deployments, you should set CLAUDE_API_KEY

# Authentication
# IMPORTANT: Use generate_hash.py to create a bcrypt hash of your password
# Run: python generate_hash.py
# Then paste the generated hash below:
API_KEY_HASH=$2b$12$example_hash_paste_your_generated_hash_here

# Guest Password (Optional)
# Create a separate password for guest users with limited permissions
# Guests can chat but cannot delete agents, rooms, or messages
# Run: python generate_hash.py (again with a different password)
# GUEST_PASSWORD_HASH=$2b$12$example_guest_hash_paste_here

# Enable Guest Login (Optional)
# Set to "true" to allow guest password authentication
# Set to "false" to disable guest login (only admin password will work)
# Default: true (if GUEST_PASSWORD_HASH is set, guests can login)
ENABLE_GUEST_LOGIN=true

# JWT Secret Key
# Used to sign and verify JWT tokens. Should be a long random string.
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-random-secret-key-here

# JWT Token (Optional)
# Store your JWT token here to skip authentication in simulation scripts
# Get your token by running: ./scripts/simulation/simulate_chatroom.sh --password "your_password" ...
# The script will print the token after successful authentication
# JWT_TOKEN=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Script Password (Optional)
# Store your password here to skip typing it when running test scripts
# This is useful for test_agent_questions.sh and other testing scripts
# Note: Prefer using JWT_TOKEN for better security in production
# CHITCHATS_PASSWORD=your_password_here

# Agent Debugging
# Set to "true" to enable detailed debug logging for agent interactions
# This will show message objects, full inputs/outputs, and stack traces
DEBUG_AGENTS=false

# Memory System Configuration
# Specify which memory file to use for the recall tool
# Options: "long_term_memory" or "consolidated_memory"
# Default: "consolidated_memory"
# RECALL_MEMORY_FILE=consolidated_memory

# Guideline Reading Mode
# Controls how agents receive behavioral guidelines
# active_tool: Agents actively call mcp__guidelines__read tool to retrieve guidelines (default, on-demand)
# description: Guidelines injected passively via tool description (lower token cost for first message)
# Default: active_tool (if not set or invalid value)
# READ_GUIDELINE_BY=active_tool

# Sampled System Prompt (Experimental)
# When true, system prompts are built by randomly sampling one variation from each segment
# (first, second, third, fourth) in guidelines_sep.yaml instead of using guidelines_3rd.yaml
# This creates variation in agent instructions while maintaining core behaviors
# Default: false
# SAMPLE_SYSTEM_PROMPT=false

# Maximum image dimension (width or height) in pixels
# Images larger than this will be resized while maintaining aspect ratio
# Default: 1920 (Full HD resolution, good balance between quality and size)
# IMAGE_MAX_DIMENSION=1920
#
# JPEG compression quality (1-100, higher = better quality but larger file size)
# Only used if IMAGE_CONVERT_TO_WEBP=false
# Default: 85 (good balance between quality and compression)
# IMAGE_JPEG_QUALITY=85
#
# WebP compression quality (1-100, higher = better quality but larger file size)
# Used when converting images to WebP or processing existing WebP images
# Default: 85 (excellent quality with good compression)
# IMAGE_WEBP_QUALITY=85
#
# PNG compression level (0-9, higher = smaller file but slower compression)
# Only used if IMAGE_CONVERT_TO_WEBP=false
# Default: 6 (Pillow's default)
# IMAGE_PNG_COMPRESS_LEVEL=6

# CORS Configuration
# For production: set your frontend URL (e.g., https://your-app.vercel.app)
FRONTEND_URL=https://claudeworld.vercel.app
# Vercel automatically sets VERCEL_URL environment variable
# Default allowed origins: localhost:5173, localhost:5174
